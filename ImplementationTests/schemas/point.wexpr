@(
	$id "local://wexpr.hackerguild.com/libWexpr/ImplementationTests/schemas/point.wexpr"
	$schema "https://wexpr.hackerguild.com/schemas/Core/v1.schema.wexpr"
	title "Simple point schema for testing"
	description "Schema for points"

	$refs @(
		; will provie the main Wexpr types
		Wexpr "https://wexpr.hackerguild.com/versions/1/Types.schema.wexpr"
	)

	$types @(
		; --- Enums

		Point @(
			type Wexpr::Map
			description "A point"
			additionalProperties false

			properties @(
				$schema @(
					type Wexpr::SchemaId
					description "The Id of the schema"
				)

				x @(
					type Wexpr::FloatValue
					description "The X coordinate of the point"
					required true
				)

				y @(
					type Wexpr::FloatValue
					description "The Y coordinate of the point"
					required true
				)

				z @(
					type Wexpr::FloatValue
					description "The Z coordinate of the point"
					required true
				)
			)
		) ; Point
	)

	rootType Point
)